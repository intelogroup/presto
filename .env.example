# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here

# vLLM Configuration (Local LLM hosting)
# vLLM service URL - use Railway internal URL when deployed
# Format: https://[vllm-service-name].railway.internal:8000 or http://localhost:8000 for local
VLLM_BASE_URL=http://localhost:8000
VLLM_ENABLED=true
VLLM_LLAMA_MODEL=llama3.1
VLLM_DEFAULT_MODEL=llama3.1
VLLM_TIMEOUT=120000

# Site Information (Optional)
SITE_URL=http://localhost:3004
SITE_NAME=Presto Presentation Generator

# Server Configuration
PORT=3004